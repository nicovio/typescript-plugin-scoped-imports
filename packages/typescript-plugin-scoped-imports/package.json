{
  "name": "typescript-plugin-scoped-imports",
  "version": "0.1.3",
  "description": "TypeScript Language Server plugin para controlar auto-imports basado en scope",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE", "CHANGELOG.md"],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "watch": "tsc --watch",
    "test": "jest",
    "biome:lint": "biome lint .",
    "biome:lint:fix": "biome lint --write .",
    "biome:format": "biome format .",
    "biome:format:fix": "biome format --write .",
    "biome:check": "biome check .",
    "biome:check:fix": "biome check --write ."
  },
  "keywords": ["typescript", "plugin", "imports", "scoped"],
  "author": "Nicolas Viotti",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "@biomejs/biome": "^1.8.3"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  }
}
